# Firebase Admin SDK Configuration
# Copy this file to .env and fill in your actual values

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_PRIVATE_KEY_ID=your-private-key-id

# Alternative: Path to Firebase Admin SDK JSON file
# FIREBASE_ADMIN_SDK_PATH=./firebase-admin-key.json

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=production
PORT=3001

# CORS Configuration
CORS_ORIGIN=https://your-project-id.web.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/summer_app
FIRESTORE_EMULATOR_HOST=
FIREBASE_AUTH_EMULATOR_HOST=

# Logging
LOG_LEVEL=info

# Application Configuration
APP_NAME=Summer Vacation Planning API
APP_VERSION=1.0.0